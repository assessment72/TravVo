<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode Bus Theme -->
    <style name="Theme.BusUI" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryBackground</item>
        <item name="colorOnPrimary">@color/primaryBackground</item>
        <item name="colorSecondary">@color/secondaryBackground</item>
