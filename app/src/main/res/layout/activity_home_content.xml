<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primaryColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_profile"
                android:onClick="toggleDrawer"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                app:tint="@color/white"/>

            <ImageView
                android:layout_width="260dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgWallet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_wallet"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"/>

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:ems="4"-->
<!--                android:text="10.00"-->
<!--                android:textSize="15sp"-->
<!--                android:padding="10dp"-->
<!--                android:textColor="@color/white"-->
<!--                android:background="@drawable/list_border"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"/>-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:background="@drawable/borders">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:src="@drawable/location2"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="7sp"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/sourceEntry"
                        android:layout_width="270dp"
                        android:layout_height="30dp"
                        android:hint="From"
                        android:textSize="22sp"
                        android:layout_marginStart="3dp"
                        android:focusable="true"/>
                    <View
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginVertical="6dp"/>
                    <TextView
                        android:id="@+id/destinationEntry"
                        android:layout_width="270dp"
                        android:layout_height="30dp"
                        android:textSize="22sp"
                        android:hint="To"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/swapBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/swap"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>

<!--            <TextView-->
<!--                android:id='@+id/source'-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/borders"-->
<!--                android:ems="9"-->
<!--                android:hint="@string/source"-->
<!--                android:autofillHints="true"-->
<!--                android:paddingHorizontal="10dp"-->
<!--                android:textSize="30sp" />-->

<!--            <TextView-->
<!--                android:id='@+id/destination'-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:autofillHints="true"-->
<!--                android:background="@drawable/borders"-->
<!--                android:ems="9"-->
<!--                android:hint="@string/destination"-->
<!--                android:paddingHorizontal="10dp"-->
<!--                android:textSize="30sp" />-->

            <androidx.cardview.widget.CardView
                android:id="@+id/bookTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                app:cardElevation="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/book"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:background="@color/primaryColor"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/searchBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                app:cardElevation="12dp"
                android:layout_marginTop = "5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:text="@string/searchBus"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_history_list"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/selectBus"
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10sp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="18dp">
                <LinearLayout
                    android:id="@+id/selectBusNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/icon_bus"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus Numbers"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/selectStop"
                android:layout_width="150dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10sp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="18dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_bus_stop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:padding="5dp"
                        android:ems="5"
                        android:text="Bus Stops"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myBookings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_mybookings" />
</RelativeLayout>