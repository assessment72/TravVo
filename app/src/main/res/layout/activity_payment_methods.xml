<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentMethods">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Pay"
        app:titleTextColor="@color/white"/>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgrey"
        android:text="Payment Methods"
        android:padding="6dp"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/payMethod_Wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_wallet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:layout_marginStart="10dp"
            android:textSize="23dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payMethod_UPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_upi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI"
            android:layout_marginStart="10dp"
            android:textSize="23dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payMethod_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_card"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit/Card card"
            android:layout_marginStart="10dp"
            android:textSize="23dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>


    </LinearLayout>
</LinearLayout>