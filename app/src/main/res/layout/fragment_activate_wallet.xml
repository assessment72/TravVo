<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="107dp"
        android:layout_height="89dp"
        android:src="@drawable/icon_wallet"
        android:layout_gravity="center"
        android:padding="10dp"
        app:tint="@color/iconColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate TravVo Wallet"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have not activated TravVo Wallet yet. Instantly activate now and start using TravVo Pay daily!"
        android:paddingVertical="15dp"
        android:gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnActivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6sp"
        android:elevation="2sp"
        android:layout_marginVertical="5sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVATE NOW"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:background="@color/primaryColor"
            android:gravity="center"
            android:paddingVertical="7sp"
            android:textSize="25dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2sp"
        android:layout_marginVertical="5sp"
        app:cardCornerRadius="6dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATER"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:background="@color/darkgrey"
            android:gravity="center"
            android:paddingVertical="7sp"
            android:textSize="25dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
