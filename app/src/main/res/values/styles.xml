<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
    </style>


    <style name="NoUnderlineAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@null</item>
    </style>

    <style name="OtpEditTextStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/list_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    
    <style name="ticketPriceSummary">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="lang_options">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">12dp</item>
        <item name="android:layout_margin">14dp</item>
    </style>

    <style name="lang_option_textview">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>


    </style>



</resources>